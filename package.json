{
  "name": "werewolf-online",
  "version": "1.0.0",
  "description": "ğŸº Lobisomem Online - Plataforma de Jogos Multiplayer em Tempo Real",
  "private": true,
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:backend": "npm run dev --workspace=backend",
    "install:all": "npm install",
    "build": "npm run build --workspace=backend",
    "test": "npm run test --workspace=backend",
    "lint": "npm run lint --workspace=backend",
    "clean": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f",
    "test:logic": "tsx --tsconfig backend/tsconfig.json scripts/test-game-logic.ts"
  },
  "keywords": [
    "werewolf",
    "game",
    "multiplayer",
    "websocket",
    "realtime",
    "typescript",
    "monorepo"
  ],
  "author": "Werewolf Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
