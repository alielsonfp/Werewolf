{
  "name": "werewolf-backend",
  "version": "1.0.0",
  "description": "ðŸº Lobisomem Online - Backend Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "npm run build && npm run start",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "tsx src/database/seeds/index.ts",
    "db:studio": "prisma studio",
    "test:auth": "chmod +x ../scripts/test-auth.sh && ../scripts/test-auth.sh",
    "test:rooms": "chmod +x ../scripts/test-rooms.sh && ../scripts/test-rooms.sh",
    "test:ws": "node scripts/test-websocket.js",
    "test:ws:basic": "node scripts/test-websocket.js basic",
    "test:ws:multi": "node scripts/test-websocket.js multi",
    "test:ws:all": "node scripts/test-websocket.js both",
    "test:ws:health": "curl -f http://localhost:3001/health/websocket || echo 'WebSocket health check failed'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "docker:build": "docker build -t werewolf-backend .",
    "docker:run": "docker run -p 3001:3001 werewolf-backend"
  },
  "keywords": [
    "werewolf",
    "game",
    "multiplayer",
    "websocket",
    "realtime",
    "typescript",
    "nodejs"
  ],
  "author": "Werewolf Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}